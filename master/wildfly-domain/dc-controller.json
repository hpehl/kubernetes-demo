{
  "id": "domain-controller",
  "kind": "ReplicationController",
  "apiVersion": "v1beta1",
  "desiredState": {
    "replicas": 1,
    "replicaSelector": {
      "operation-mode": "dc"
    },
    "podTemplate": {
      "desiredState": {
        "manifest": {
          "version": "v1beta1",
          "id": "domain-controller",
          "restartPolicy": "always",
          "containers": [
            {
              "name": "domain-controller",
              "image": "hpehl/wildfly-domain",
              "command": [
                "--host-config",
                "host-master.xml",
                "-b",
                "0.0.0.0",
                "-bmanagement",
                "0.0.0.0"
              ]
            }
          ]
        }
      },
      "labels": {
        "operation-mode": "dc"
      }
    }
  }
}
