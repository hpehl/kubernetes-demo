{
  "id": "domain-controller",
  "kind": "Pod",
  "apiVersion": "v1beta1",
  "desiredState": {
    "manifest": {
      "version": "v1beta1",
      "id": "domain-controller",
      "containers": [
        {
          "name": "domain-controller",
          "image": "hpehl/wildfly-domain",
          "ports": [
            {
              "containerPort": 9990,
              "hostPort": 9990
            }
          ],
          "command": [
            "--host-config",
            "host-master.xml",
            "-b",
            "0.0.0.0",
            "-bmanagement",
            "0.0.0.0"
          ]
        }
      ]
    }
  },
  "labels": {
    "controller-type": "domain"
  }
}
